{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true, // https://blogs.msdn.microsoft.com/typescript/2016/12/07/announcing-typescript-2-1/
    "declaration": true,
    "allowJs": false,
    "paths": {
      "@ditsmod/body-parser": ["../packages/body-parser/src"],
      "@ditsmod/core": ["../packages/core/src"],
      "@ditsmod/router": ["../packages/router/src"],
      "@ditsmod/open-api": ["../packages/open-api/src"],
    }
  },
  "include": ["./**/*"]
}
