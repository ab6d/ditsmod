{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "removeComments": false,
    "noImplicitAny": true, // https://blogs.msdn.microsoft.com/typescript/2016/12/07/announcing-typescript-2-1/
    "declaration": true,
    "allowJs": false,
    "paths": {
      "@ditsmod/core": ["../packages/core/src"],
      "@ditsmod/router": ["../packages/router/src"],
      "@ditsmod/body-parser": ["../packages/body-parser/src"],
    }
  }
}
